{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,

    "strictPropertyInitialization": false,

    "allowJs": false,

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["database/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
